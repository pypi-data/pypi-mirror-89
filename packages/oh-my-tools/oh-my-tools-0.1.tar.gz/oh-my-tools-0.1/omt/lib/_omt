#compdef omt
#
# zsh completion for omt
#


# Short-option stacking can be enabled with:
#  zstyle ':completion:*:*:docker:*' option-stacking yes
#  zstyle ':completion:*:*:docker-*:*' option-stacking yes
__omt_arguments() {
    if zstyle -t ":completion:${curcontext}:" option-stacking; then
        print -- -s
    fi
}



__omt_commands() {
    local -a subcmds
    current_value=${(j: :)words[1, $CURRENT-1]}
    omt_comp=omt
    if [ -f ~/.omt/bin/omt-completion.sh ];then
        omt_comp=~/.omt/bin/omt-completion.sh
    fi
    subcmds=(${(f)"$(_call_program commands $omt_comp completion 2>&1)"})
    _describe 'command' subcmds
}

__omt_sub_commands() {
    omt_comp=omt
    if [ -f ~/.omt/bin/omt-completion.sh ];then
        omt_comp=~/.omt/bin/omt-completion.sh
    fi
    local -a subcmds
    current_value=${(j: :)words[1, $CURRENT-1]}
    subcmds=(${(f)"$(_call_program commands $omt_comp $current_value completion 2>&1)"})
    _describe 'command' subcmds
}




_omt() {
    # Support for subservices, which allows for `compdef _docker docker-shell=_docker_containers`.
    # Based on /usr/share/zsh/functions/Completion/Unix/_git without support for `ret`.
    if [[ $service != omt ]]; then
        _call_function - _$service
        return
    fi

    local curcontext="$curcontext" state line help="-h --help"
    integer ret=1
    typeset -A opt_args

    _arguments $(__omt_arguments) -C \
        "(: -)"{-h,--help}"[Print usage]" \
        "($help -v --version)"{-v,--version}"[Print version information and quit]" \
        "($help -): :->command" \
        "($help -)*:: :->option-or-argument" && ret=0

    case $state in
        (command)
            __omt_commands && ret=0
            ;;
        (option-or-argument)
            #curcontext=${curcontext%:*:*}:docker-$words[1]:

            __omt_sub_commands && ret=0
            ;;
    esac

    return ret
}

_dockerd() {
    integer ret=1
    words[1]='daemon'
    __docker_subcommand && ret=0
    return ret
}

_omt "$@"

