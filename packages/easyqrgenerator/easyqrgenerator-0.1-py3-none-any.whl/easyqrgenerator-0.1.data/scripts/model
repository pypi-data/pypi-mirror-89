import qrcode

def create_code(url, bg_color, fill_color, path):
    qr = qrcode.QRCode(
        version=3,
        error_correction=qrcode.constants.ERROR_CORRECT_H,
        box_size=9,
        border=0
    )

    qr.add_data(url)
    qr.make()
    img = qr.make_image(fill_color=fill_color, back_color=bg_color)
    img.save(path)
