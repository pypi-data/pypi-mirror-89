<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="meetingseraing_images"
         meta_type="Filesystem Directory View"
         directory="MeetingSeraing/skins/meetingseraing_images"/>
 <object name="meetingseraing_styles"
         meta_type="Filesystem Directory View"
         directory="MeetingSeraing/skins/meetingseraing_styles"/>
 <object name="meetingseraing_templates"
         meta_type="Filesystem Directory View"
         directory="MeetingSeraing/skins/meetingseraing_templates"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="meetingseraing_images"/>
  <layer insert-after="custom" 
         name="meetingseraing_styles"/>
  <layer insert-after="custom" 
         name="meetingseraing_templates"/>
 </skin-path>

</object>