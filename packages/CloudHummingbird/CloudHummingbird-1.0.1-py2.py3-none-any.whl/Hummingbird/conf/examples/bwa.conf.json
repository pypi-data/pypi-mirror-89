{
  "Platform": {
    "service": "gcp",
    "project": "gbsc-gcp-project-hummingbird",
    "regions": "us-west1",
    "bucket": "gbsc-sgc-hummingbird-uray"
  },
  "Downsample": {
    "input": {
      "INPUT_R1": "gs://gbsc-sgc-hummingbird-uray/references-1mil/one_mil.fastq.gz",
      "INPUT_R2": "gs://gbsc-sgc-hummingbird-uray/references-1mil/two_mil.fastq.gz"
    },
    "target": 707646124,
    "fractions": [0.001, 0.01, 0.1],
    "output": "new_output",
    "logging": "logging-1mil",
    "fullrun": true
  },
  "Profiling": [
    {
      "image": "xingziye/bwa-gatk",
      "logging": "logging-10mil",
      "result": "logging-100mil",
      "thread": [8, 16, 32],
      "input-recursive": {
        "REF": "references-1mil"
      },
      "command": "bwa mem -t ${THREAD} -M -R '@RG\\tID:0\\tLB:Library\\tPL:Illumina\\tSM:' ${REF}/GRCh37-lite.fa ${INPUT_R1} ${INPUT_R2} > ${OUTPUT_SAM}",
      "output": {
        "OUTPUT_SAM": "output-1mil/output.sam"
      },
      "force": false,
      "disk": "200",
      "tries": 3
    }
  ]
}
