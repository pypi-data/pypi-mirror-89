#!/usr/bin/python3
# BOTLIB - botcmd
#
# this file is placed in the public domain

import os, sys ; sys.path.insert(0, os.getcwd())

from bot.hdl import Handler
from bot.trm import execute

import bot.obj

class Mini(Handler):

    def direct(self, txt):
        print(txt)

def main():
    bot.obj.wd = "/var/lib/botd/"
    h = Mini()
    h.walk("bot")
    return h.cmd(" ".join(sys.argv[1:]))

execute(main)
os._exit(0)
