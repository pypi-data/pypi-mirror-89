                {{ caller('tf.keras.layers.AveragePooling2D') }}            
            {% endif %}
        {% elif conv_type == '3D' %}
            {% if pool_type == 'Max' %}
                {{ caller('tf.keras.layers.MaxPooling3D') }}
            {% elif pool_type == 'Mean' %}
                {{ caller('tf.keras.layers.AveragePooling3D') }}            
            {% endif %}
        {% endif %}
    {% endfilter %}
{% endmacro %}


