            {{ caller('tf.keras.layers.Conv1D') }}        
        {% elif layer_spec.conv_dim == '2D' %}
            {{ caller('tf.keras.layers.Conv2D') }}    
        {% elif layer_spec.conv_dim == '3D' %}
            {{ caller('tf.keras.layers.Conv3D') }}
        {% endif %}
