{% extends 'admin.base.html.j2' %}
{% import "bootstrap/wtf.html" as wtf %}


{% block appcontent %}
<ul class="text-monospace">
  {% for item in current_menu.children recursive %}
    
    <li>
        {{ loop.depth }}
      | {{ item.order }}
      | {{ item.text }}
      | {{ item.url }}
      | {{ 'vis' if item.visible else '!vis' }}
      | {{ ('pgm' if item.pagemenu()) if item.pagemenu is defined else '!pgm' }}
      | {{ ('itm' if item.itemmenu()) if item.itemmenu is defined else '!itm' }}
      | {{ item.parent.name or 'n/p' }}
        <ul>
          {{ loop(item.children) }}
        </ul>
    </li>
  {% endfor %}
</ul>
{% endblock %}
